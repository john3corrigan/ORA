@model Lib.ViewModels.ProjectVM
    @using Lib.ViewModels
@{
    ViewBag.Title = "CreateProject";
}

<h2>CreateProject</h2>

@using (Html.BeginForm("CreateProject", "Project", FormMethod.Post))
{
    <div>
        <div>
            <div>
                @Html.DisplayFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
                <font color="ff0000">@Html.ValidationMessageFor(m => m.Title)</font>
            </div>
            <div>
                @Html.DisplayFor(m => m.ProjectName)
                @Html.TextBoxFor(m => m.ProjectName)
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ProjectName)</font>
            </div>
            <div>
                @Html.DisplayFor(m => m.ProjectNumber)
                @Html.TextBoxFor(m => m.ProjectNumber)
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ProjectNumber)</font>
            </div>
            <div>
                @Html.DisplayFor(m => m.ProjectStartDate)
                @Html.TextBoxFor(m => m.ProjectStartDate)
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ProjectStartDate)</font>
            </div>
            <div>
                @Html.DisplayFor(m => m.ProjectEndDate)
                @Html.TextBoxFor(m => m.ProjectEndDate)
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ProjectEndDate)</font>
            </div>
            <div>
                @Html.DisplayFor(m => m.Client)
                @Html.DropDownListFor(m => m.Client, new SelectList(Enum.GetValues(typeof(ClientVM))), "Select Client", new { @class = "form-control" })
                <font color="ff0000">@Html.ValidationMessageFor(m => m.Client)</font>
            </div>
            @Html.HiddenFor(m => m.Metadata.CreatedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.Metadata.ModifiedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.Metadata.Created, new { @Value = DateTime.Now })
            @Html.HiddenFor(m => m.Metadata.Modified, new { @Value = DateTime.Now })
            <input type="submit" value="Submit" />
        </div>
    </div>
}
