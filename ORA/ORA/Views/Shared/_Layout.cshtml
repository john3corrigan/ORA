<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/OraStyler.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*for the header/moved coding for 'login/signup'*@
    <div class="wrapper">
        <div class="wrapper_inner">
            <header class="fixed">
                <div class="container">
                    <div class="clearfix navbar_top_bottom_holder">
                        <div class="navbar_top">
                            <div class="container">
                                <div class="container_inner">
                                    <div class="left">
                                        <div class="inner"></div>
                                    </div>
                                    <div class="right">
                                        <div class="inner">
                                            <div>
                                                <div>
                                                    <ul class="list-inline">
                                                        @*Make sure the user sees their name and current session's name*@
                                                        @*Fill Session With Appropriate String when LoginController is Created*@
                                                        @*<li>@Html.ActionLink( @*Replace this String Value With Session[""] and have it redirect to the account controller, or dropdownbox for more options" ", "", "")</li>*@
                                                        <li>@Html.ActionLink("Log-Out", "", "")</li>
                                                        @*}
                                                            else
                                                            {*@
                                                        <li>@Html.ActionLink("Log-In", "", "")</li>
                                                        @*}*@
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="navbar_bottom">
                            <div class="container">
                                <div class="navbar_left">
                                    <a href="~/Home/Index">
                                        <img src="http://www.onshoreoutsourcing.com/wp-content/uploads/2017/04/oo_web360px.png" alt="Logo" onclick="" />
                                    </a>
                                </div>
                                <div class=" navbar_right">
                                    <ul class="nav navbar-nav">
                                        <li>@Html.ActionLink("About", "About", "Home")</li>
                                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                        @*Dropdown Boxes for the Nav-Bar Need CSS to make more appropriate*@
                                        @*@if (Session[""] != null)
                {*@
                                        <li>
                                            <div>
                                                <div>
                                                    <ul>
                                                        <li>@Html.ActionLink("Report A", "", "")</li>
                                                        <li>@Html.ActionLink("Report B", "", "")</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div>
                                                <div>
                                                    <ul>
                                                        <li>@Html.ActionLink("View My KPI", "", "")</li>
                                                        <li>@Html.ActionLink("KPI Form", "", "")</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </header>
        <div class="container body-content" style="padding-top: 360px;">
            @RenderBody()
            <hr />
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
