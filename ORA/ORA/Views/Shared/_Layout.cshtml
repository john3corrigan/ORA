<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Onshore Employees</title>
    <link href="~/Content/OraStyler.css" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="~/Scripts/AssesValDesc.js" type="text/javascript"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/OraStyler.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#f2f2f2; height:100%" class="Raleway">
    <div class="wrapper">
        <div class="wrapper_inner">
            <header class="fixed">
                <div class="container">
                    <div class="clearfix header_top_bottom_holder">
                        <div class="header_top">
                            <div class="container">
                                <div class="container_inner">
                                    <div class="left">
                                        <div class="inner"></div>
                                    </div>
                                    <div class="right">
                                        <div class="inner">
                                            <div>
                                                <div>
                                                    <ul class="list-inline">
                                                        @if (Session["Name"] != null)
                                                        {
                                                            <li>@Html.ActionLink((string)Session["Name"], "ViewProfile", "Profile", new { ProfileID = (int)Session["ID"] }, new { Area = "" })</li>
                                                            <li>@Html.ActionLink("Log-Out", "LogOut", "Login")</li>
                                                        }
                                                        else
                                                        {
                                                            <li>@Html.ActionLink("Log-In", "Login", "Login")</li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="header_bottom">
                            <div class="container">
                                <div class="container_inner clearfix">
                                    <div class="header_left">
                                        <div style="height:100px">
                                            <a href="~/Home/Index">
                                                <img style="height:100px" src="http://www.onshoreoutsourcing.com/wp-content/uploads/2017/04/oo_web360px.png" alt="Logo" onclick="" />
                                            </a>
                                        </div>
                                    </div>
                                    <nav class=" header_right right">
                                        <ul class="list-inline">
                                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                            @if (Session["Name"] != null)
                                            {
                                                <li class="dropdown nav_content">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Assessment</span>
                                                        <ul class="dropdown-menu">
                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("SM") || Session["Roles"].ToString().Contains("TL"))
                                                            {
                                                                <li>@Html.ActionLink("Create an Assessment", "CreateAssessment", "Assessment")</li>
                                                            }
                                                                <li>@Html.ActionLink("View All Assessments", "Index", "Assessment")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Assignment</span>
                                                        <ul class="dropdown-menu">
                                                            @if (Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create an Assignment", "CreateAssignment", "Assignment")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Assignments", "Index", "Assignment")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Client</span>
                                                        <ul class="dropdown-menu">
                                                            @if (Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Add a Client", "AddClient", "Client")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Clients", "Index", "Client")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Employee</span>
                                                        <ul class="dropdown-menu">
                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR"))
                                                            {
                                                                <li>@Html.ActionLink("Add an Employee", "AddEmployee", "Employee")</li>
                                                                <li>@Html.ActionLink("View All Employees", "Index", "Employee")</li>
                                                            }
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>KPI</span>
                                                        <ul class="dropdown-menu">
                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("SM") || Session["Roles"].ToString().Contains("TL") || Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create a KPI", "CreateKPI", "KPI")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All KPIs", "Index", "KPI")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Project</span>
                                                        <ul class="dropdown-menu">

                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("SM") || Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create a Project", "CreateProject", "Project")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Projects", "Index", "Project")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Sprint</span>
                                                        <ul class="dropdown-menu">

                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("SM") || Session["Roles"].ToString().Contains("TL") || Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create a Sprint", "CreateSprint", "Sprint")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Sprints", "Index", "Sprint")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Story</span>
                                                        <ul class="dropdown-menu">

                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("SM") || Session["Roles"].ToString().Contains("TL") || Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create a Story", "CreateStory", "Story")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Stories", "Index", "Story")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                        <span>Team</span>
                                                        <ul class="dropdown-menu">

                                                            @if (Session["Roles"].ToString().Contains("ADMINISTRATOR") || Session["Roles"].ToString().Contains("Director"))
                                                            {
                                                                <li>@Html.ActionLink("Create a Team", "CreateTeam", "Team")</li>
                                                            }
                                                            <li>@Html.ActionLink("View All Teams", "Index", "Team")</li>
                                                        </ul>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            </header>
            <div class="container body-content" style="padding-top: 163px; height:100%; ">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Onshore</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
