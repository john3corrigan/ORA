@model Lib.ViewModels.CreateAssignmentVM
@{
    ViewBag.Title = "ViewTeamAssignments";
}

<h2>ViewTeamAssignments</h2>

@Html.BeginForm("ViewTeamAssignments", "Assignment", FormMethod.Post)
@Html.Label("Start Date", new { @class = "LableFormat" })
@Html.TextBox("StartDate", DateTime.Now, htmlAttributes: new { @class = "form-control TextBoxFormat" })
@Html.Label("End Date", new { @class = "LableFormat" })
@Html.TextBox("EndDate", DateTime.Now, htmlAttributes: new { @class = "form-control TextBoxFormat" })
@Html.DropDownList("TeamID", new SelectList(Model.TeamList, "TeamID", "TeamName"), "---Select---", new { @class = "dropdown" })
<input type="submit" value="Submit" />