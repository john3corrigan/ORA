@model Lib.ViewModels.TeamVM
@{
    ViewBag.Title = "ViewTeam";
}

<h2>ViewTeam</h2>

<table>
    <tr>
        <th>Title</th>
        <th>Name</th>
        <th>Assignments</th>
        <th>Client</th>
        <th>Created Date</th>
        <th>Created By</th>
        <th>Modified Date</th>
        <th>Modified By</th>
    </tr>
    <tr>
        <td>@Html.Display(Model.Title)</td>
        <td>@Html.Display(Model.TeamName)</td>
        <td>@Html.ActionLink("", "", routeValues: new { AssignmentsList = Model.Assignment })</td>
        <td>@Html.Display(Model.Client.ClientName)</td>
        <td>@Html.Display(Model.Created.ToString())</td>
        <td>@Html.Display(Model.CreatedBy)</td>
        <td>@Html.Display(Model.Modified.ToString())</td>
        <td>@Html.Display(Model.ModifiedBy)</td>
    </tr>
</table>