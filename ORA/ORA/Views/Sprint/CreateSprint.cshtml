@model Lib.ViewModels.SprintVM
@{
    ViewBag.Title = "CreateSprint";
}

<h2>CreateSprint</h2>

@using (Html.BeginForm("CreateSprint", "Sprint", FormMethod.Post))
{
    <div>
        <div>
            <div>
                @Html.LabelFor(m => m.SprintNumber, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.SprintNumber, new { @class = "form-control TextBoxFormat" })
                <font>@Html.ValidationMessageFor(m => m.SprintNumber)</font>
            </div>
            <div>
                @Html.LabelFor(m => m.SprintName, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.SprintName, new { @class = "form-control TextBoxFormat" })
                <font>@Html.ValidationMessageFor(m => m.SprintName)</font>
            </div>
            <div>
                @Html.LabelFor(m => m.StartDate, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control TextBoxFormat", @Value = DateTime.Today })
                <font>@Html.ValidationMessageFor(m => m.StartDate)</font>
            </div>
            <div>
                @Html.LabelFor(m => m.EndDate, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control TextBoxFormat", @Value = DateTime.Today })
                <font>@Html.ValidationMessageFor(m => m.EndDate)</font>
            </div>
            @Html.HiddenFor(m => m.CreatedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.ModifiedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.Created, new { @Value = DateTime.Now })
            @Html.HiddenFor(m => m.Modified, new { @Value = DateTime.Now })
            <input type="submit" value="Submit" />
        </div>
    </div>
}