@model Lib.ViewModels.ClientVM
@{
    ViewBag.Title = "AddClient";
}

<h2>AddClient</h2>

@using (Html.BeginForm("AddClient", "Client", FormMethod.Post))
{
    <div>
        <div>
            <div>
                @Html.LabelFor(m => m.ClientName, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.ClientName, new { @class = "form-control TextBoxFormat" })
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ClientName)</font>
            </div>
            <div>
                @Html.LabelFor(m => m.ClientAbbreviation, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.ClientAbbreviation, new { @class = "form-control TextBoxFormat" })
                <font color="ff0000">@Html.ValidationMessageFor(m => m.ClientAbbreviation)</font>
            </div>
            <div>
                @Html.LabelFor(m => m.Title, new { @class = "LabelFormat" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control TextBoxFormat" })
                <font color="ff0000">@Html.ValidationMessageFor(m => m.Title)</font>
            </div>
            @Html.HiddenFor(m => m.CreatedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.ModifiedBy, new { @Value = Session["Name"] })
            @Html.HiddenFor(m => m.Created, new { @Value = DateTime.Now })
            @Html.HiddenFor(m => m.Modified, new { @Value = DateTime.Now })
            <input type="submit" value="Submit" />
        </div>
    </div>
}